<div class="bgimg w3-display-container w3-opacity-min" >
  <div class="w3-display-right w3-right w3-padding-64 w3-margin-right	">
      <span class="w3-text-white w3-padding-64 w3-margin-right" style="font-size:60px ; padding-right: 200px;"> EXPLORE<br>FASHION</span>
  </div>
</div>

{{#each products}}
<div class="w3-row">
   {{#each this}}
    <div class="w3-col m3 w3-light-gray w3-center w3-padding-32 " style=" margin: 5px; width:435px;">
        <img src="{{this.imagePath}}" class="w3-borded" alt="bag" style="width:350px; height: 300px">
        <div class="myapp w3-col m8 w3-dark-grey w3-left-align w3-text-black">
            <h3><b>{{this.title}}</b></h3>
            <p>{{this.description}}</p>
        </div>
        <div class="myapp w3-col m4 w3-blue w3-center ">
            <br><br> <br><br>
            <p class="w3-text-black">Rs {{this.price}} </p>
            <button class="w3-button w3-round-large w3-green "><a href="/add-to-cart/{{this._id }}" class="w3-text-black" href="" >Add to <i class="fas fa-shopping-cart"></i></a></button>
            <br><br> <br><br>
        </div>
    </div>
    {{/each}}
 </div>
{{/each}}
